@{
    Layout = "./_Layout";
}
<link href="~/css/Account/login.css" rel="stylesheet" />

<body class="bg-light">

    <div class="container login-container">
        <div class="row login-card">
            <div class="col-md-5 login-image">
                <img src="~/images/Account/Loginlogo.png" alt="Logo" width="500px" height="500px">
            </div>
            <div class="col-md-7">
                <h3 class="text-center">Sign In</h3>
                <form asp-action="Login" asp-controller="Account">
                    <div class="mb-3">
                        <label class="form-label">E-mail</label>
                        <input name="mail" type="text" class="form-control" placeholder="Username" required value="yildiz@gmail.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şifre</label>
                        <input name="password" type="password" class="form-control" placeholder="Password" required value="1">
                    </div>
                    <button type="submit" class="btn btn-custom">Giriş Yap</button>

                    <div class="d-flex justify-content-between mt-3">
                        <div>
                            <input type="checkbox" id="rememberMe"> <label for="rememberMe"> Beni Hatırla</label>
                        </div>
                        <a href="#" class="text-decoration-none">Şifreni Mi Unuttun?</a>
                    </div>

                    <div class="text-center mt-3">
                        Not a member? <a href="~/Account/Register" class="text-decoration-none text-primary">Üye Ol</a>
                    </div>

                    @* @{
                        if (ViewBag.ErrorMessage)
                        {
                            <span>@ViewBag.ErrorMessage</span>
                        }
                    } *@
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
