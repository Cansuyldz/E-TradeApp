@model Cart
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ödeme";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <button class="js-add-address">
                Yeni Adres Ekle
            </button>
            <div class="card p-4 add-address-form">
                <div class="adres">
                    <div class="adres-title mb-3">Adres Kayıt Formu</div>
                    <div class="js-close-address-form"><button>X</button></div>
                </div>


                <form>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="isim" class="form-label">İsim</label>
                            <input type="text" class="form-control" id="isim" placeholder="İsminizi girin">
                        </div>
                        <div class="col-md-6">
                            <label for="soyisim" class="form-label">Soyisim</label>
                            <input type="text" class="form-control" id="soyisim" placeholder="Soyisminizi girin">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="telefon" class="form-label">Telefon</label>
                            <input type="tel" class="form-control" id="telefon" placeholder="Telefon numaranızı girin">
                        </div>
                        <div class="col-md-6">
                            <label for="il" class="form-label">İl</label>
                            <input type="text" class="form-control" id="il" placeholder="İlinizi girin">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="ilce" class="form-label">İlçe</label>
                            <input type="text" class="form-control" id="ilce" placeholder="İlçenizi girin">
                        </div>
                        <div class="col-md-6">
                            <label for="mahalle" class="form-label">Mahalle</label>
                            <input type="text" class="form-control" id="mahalle" placeholder="Mahallenizi girin">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="adres" class="form-label">Adres</label>
                        <textarea class="form-control" id="adres" rows="3" placeholder="Açık adresinizi girin"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="adresBasligi" class="form-label">Adres Başlığı</label>
                        <input type="text" class="form-control" id="adresBasligi" placeholder="Ev, İş, Yazlık vb.">
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <form asp-controller="Checkout" asp-action="Payment" method="post">
                <div class="card p-3">
                    <h5 class="fw-bold">Sipariş Özeti</h5>
                    <p class="d-flex justify-content-between">
                        <span>Ürünün Toplamı</span>
                        <span class="fw-bold">TL</span>
                    </p>
                    <p class="d-flex justify-content-between">
                        <span>Kargo Toplam</span>
                        <span class="fw-bold">44,99 TL</span>
                    </p>
                    <p class="d-flex justify-content-between text-success">
                        <span>250 TL ve Üzeri Kargo Bedava</span>
                        <span>-44,99 TL</span>
                    </p>
                    <hr>
                    <p class="d-flex justify-content-between">
                        <span class="fw-bold">Toplam</span>
                        <span class="fw-bold"> TL</span>
                    </p>
                    <a class="btn btn-warning w-100 mb-2 fw-bold" href="~/checkout/payment">
                        Kaydet ve Devam Et
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



