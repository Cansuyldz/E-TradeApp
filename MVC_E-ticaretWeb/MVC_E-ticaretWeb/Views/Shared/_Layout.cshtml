<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_E_ticaretWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_E_ticaretWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand text-black" href="#">
                <img src="images/logo/logo.png" alt="Logo" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-black" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Bilgisayar
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-black" href="#">Masaüstü Bilgisayar</a></li>
                            <li><a class="dropdown-item text-black" href="#">Dizüstü Bilgisayar</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-black" href="#">Tüm kategoriler</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-black" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Yazıcılar & Projeksiyon
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-black" href="#">Yazıcılar</a></li>
                            <li><a class="dropdown-item text-black" href="#">Sarf Malzemeleri</a></li>
                            <li><a class="dropdown-item text-black" href="#">Projeksiyon Ekipanları</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-black" href="#">Tüm Kategoriler</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-black" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            TV & Ses Sistemleri
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-black" href="#">Televizyon</a></li>
                            <li><a class="dropdown-item text-black" href="#">Uydu Alıcıları</a></li>
                            <li><a class="dropdown-item text-black" href="#">Hoparlör</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-black" href="#">Tüm Kategoriler</a></li>
                        </ul>
                    </li>
                </ul>

                <!-- Arama Kutusu ve Butonlar -->
                <div class="d-flex align-items-center">
                    <form class="d-flex me-3 position-relative">
                        <input class="form-control rounded-pill shadow-sm ps-4 pe-5" type="search" placeholder="Ürün ara..." aria-label="Search">
                        <button class="btn position-absolute end-0 top-50 translate-middle-y me-2" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- Favori Butonu -->
                    <a href="~/Account/Favorites" class="btn btn-outline-secondary me-2" title="favoriler">
                        <i class="bi bi-heart"></i>
                    </a>

                    <!-- Sepet Butonu -->
                    <a href="~/Account/Cart" class="btn btn-outline-secondary me-2" title="sepet">
                        <i class="bi bi-cart"></i>
                    </a>

                    <!-- Kullanıcı Butonu -->
                    <a href="#" class="btn btn-outline-secondary" title="hesap" id="userIcon">
                        <i class="bi bi-person"></i>
                    </a>

                    <!-- Kullanıcı Kartı -->
                    <div id="userCard" class="card position-absolute user-card shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title">Hoş Geldiniz</h5>
                            <p class="card-text">Lütfen giriş yapın veya üye olun.</p>
                            <a href="/Account/Login" class="btn btn-primary w-100 mb-2">Giriş Yap</a>
                            <a href="/Account/Register" class="btn btn-secondary w-100">Üye Ol</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </nav>

 


 

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MVC_E_ticaretWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
