@model MVC_E_ticaretWeb.Models.Product
@{
    ViewBag.Title = "Ürünleri Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center">Kategori Güncelle</h2>

<form asp-controller="Product" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Ürün Adı</label>
        <input class="form-control" name="Name" required />
    </div>

    <div class="form-group">
        <label>Ürün Fiyat</label>
        <input type="number" step="0.01" class="form-control" name="Price" required />
    </div>

    <div class="form-group">
        <label>Ürün Stok</label>
        <input type="number" class="form-control" name="Stock" required />
    </div>

    <div class="form-group">
        <label>Ürün Resim</label>
        <input type="file" class="form-control" name="ImageFile" accept="image/*" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>

