@model IEnumerable<MVC_E_ticaretWeb.Models.Category>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center">Kategoriler</h2>
<a href="@Url.Action("Create", "Category", new { area = "Admin" })" class="btn btn-success">
    Yeni Kategori Ekle
</a>

<table class="table table-bordered table-striped mt-3">
    <thead class="bg-primary text-white">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <!-- Güncelleme Butonu -->
                    <a href="@Url.Action("Edit", "Category", new { id = category.Id, area = "Admin" })" class="btn btn-warning btn-sm">
                        Güncelle
                    </a>

                    <!-- Silme Butonu (Form İle) -->
                    <form method="post" action="@Url.Action("Delete", "Category")" onsubmit="return confirm('Bu kategoriyi silmek istiyor musunuz?');" style="display:inline;">
                        <input type="hidden" name="id" value="@category.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
